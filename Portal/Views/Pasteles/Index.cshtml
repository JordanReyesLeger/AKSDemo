@using Entities
@model List<Pastel>

<!-- Mostrar mensajes de éxito o error -->
@{
    Html.RenderPartial("_Messages");
}

<h2 class="text-center mb-4">Nuestros Pasteles v1</h2>

<div class="row">
    @if (Model.Count > 0)
    {
        @foreach (var pastel in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="https://images-gmi-pmc.edge-generalmills.com/904a79bb-4da0-44cf-8b90-e8c33b4f4afc.jpg" class="card-img-top" alt="@pastel.Nombre" />
                    <div class="card-body">
                        <h5 class="card-title">@pastel.Nombre</h5>
                        <p class="card-text">
                            <strong>Sabor:</strong> @pastel.Sabor <br>
                            <strong>Tamaño:</strong> @pastel.Tamaño pulgadas
                        </p>
                        <a href="/Pasteles/Eliminar/@pastel.Id" class="btn btn-danger">Eliminar</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center">
            <p class="text-muted">No hay pasteles disponibles. ¡Agrega uno nuevo!</p>
        </div>
    }
</div>

<div class="text-center mt-4">
    <a href="/Pasteles/Crear" class="btn btn-primary btn-lg">Agregar Nuevo Pastel</a>
</div>
